// nf-core subworkflows test sourmash_create
nextflow_workflow {

    name "Test Subworkflow SOURMASH_CREATE"
    script "../main.nf"
    workflow "SOURMASH_CREATE"

    tag "subworkflows"
    tag "subworkflows_"
    tag "subworkflows/sourmash_create"
    tag "sourmash"
    tag "sourmash/sketch"
    tag "sourmash/index"


    // TODO nf-core: Change the test name preferably indicating the test-data and file-format used
    test("library - fasta - batch size 1") {

        when {
            workflow {
                """
                input[0] = channel.of(
                    [
                        [ id:'E. coli' ],
                        file(params.modules_testdata_base_path + 'genomics/prokaryotes/escherichia_coli/genome/genome.fa', checkIfExists: true),
                    ],
                    [
                        [ id:'B. fragilis' ],
                        file(params.modules_testdata_base_path + 'genomics/prokaryotes/bacteroides_fragilis/genome/genome.fna.gz', checkIfExists: true),
                    ],
                    [
                        [ id:'H. influenzae' ],
                        file(params.modules_testdata_base_path + 'genomics/prokaryotes/haemophilus_influenzae/genome/genome.fna.gz', checkIfExists: true),
                    ],
                )
                input[1] = 1
                input[2] = 31
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success},
                { assert snapshot(workflow.out).match()}
            )
        }
    }
}
