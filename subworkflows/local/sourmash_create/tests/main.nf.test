                        file(params.modules_testdata_base_path + 'genomics/prokaryotes/streptococcus_agalactiae/genome/emu/species_taxid.fasta', checkIfExists: true),
                    ],
                ])

                input[0] = ch_library
                input[1] = [31]
                input[2] = 2
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert file(workflow.out.db.get(0).get(1)).name == 'test-sourmash-dna-31mer.sbt.zip' },
                { assert snapshot(workflow.out.versions).match('fna-batch-size-2-versions') }
