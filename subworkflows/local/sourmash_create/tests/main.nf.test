    test("library - faa - batch size 1") {
        config "./protein.config"

        when {
            params {
                outdir = "$outputDir"
            }

            workflow {
                """
                def ch_library = Channel.of([
                    [ id:'test' ],
                    [
                        file(params.pipelines_testdata_base_path + '/data/fasta/GCF_000292685.1_ASM29268v1_genomic.faa', checkIfExists: true),
                        file(params.pipelines_testdata_base_path + '/data/fasta/GCF_900478275.1_34211_D02_genomic.faa', checkIfExists: true),
                        file(params.pipelines_testdata_base_path + '/data/fasta/GCF_002881355.1_ASM288135v1_genomic.faa', checkIfExists: true),
                    ],
                ])

                input[0] = ch_library
                input[1] = [10]
                input[2] = 1
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert file(workflow.out.db.get(0).get(1)).name == 'test-sourmash-protein-10mer.sbt.zip' },
                { assert snapshot(workflow.out.versions).match('protein-versions') }
            )
        }
    }

