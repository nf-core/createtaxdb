nextflow_workflow {

    name "Test Subworkflow SOURMASH_CREATE"
    script "../main.nf"
    workflow "SOURMASH_CREATE"

    tag "subworkflows"
    tag "subworkflows_"
    tag "subworkflows/sourmash_create"
    tag "sourmash"
    tag "sourmash/sketch"
    tag "sourmash/index"


    test("library - fasta - batch size 1") {

        when {
            workflow {
                """
                def ch_library = Channel.of([
                    [ id:'test' ],
                    [
                        file(params.modules_testdata_base_path + 'genomics/prokaryotes/escherichia_coli/genome/genome.fa', checkIfExists: true),
                        file(params.modules_testdata_base_path + 'genomics/prokaryotes/bacteroides_fragilis/genome/genome.fna.gz', checkIfExists: true),
                        file(params.modules_testdata_base_path + 'genomics/prokaryotes/streptococcus_agalactiae/genome/emu/species_taxid.fasta', checkIfExists: true),
                    ],
                ])

                input[0] = ch_library
                input[1] = 1
                input[2] = 31
                """
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert file(workflow.out.db.get(0).get(1)).name == 'test.sbt.zip' },
                { assert snapshot(workflow.out.versions).match('versions') }
            )
        }
    }

    test("too many libraries - should fail") {

        when {
            workflow {
                """
                def ch_library = Channel.of(
                    [
                        [ id:'test1' ],
                        [
                            file('foo.fa', checkIfExists: false),
                            file('bar.fa', checkIfExists: false),
                            file('baz.fa', checkIfExists: false),
                        ],
                    ],
                    [
                        [ id:'test2' ],
                        [
                            file('foo.fa', checkIfExists: false),
                            file('bar.fa', checkIfExists: false),
                            file('baz.fa', checkIfExists: false),
                        ],
                    ],
                )

                input[0] = ch_library
                input[1] = 1
                input[2] = 31
                """
            }
        }

        then {
            assertAll(
                { assert workflow.failed },
                { assert workflow.errorReport.contains("Input channel 'ch_library' must contain exactly one element, but it contains 2.") }
            )
        }
    }
}
